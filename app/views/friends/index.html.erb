  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th> </th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <td>
<%= link_to friend.first_name + ' ' + friend.last_name, friend %>


          </td>
          
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          
          
          
          
          
          <td><%= button_to 'Delete',  
          { controller: "friends", action: "destroy", id: friend.id }, data: { confirm: 'Are you sure?' }, 
          method: :delete, class: "btn btn-outline-danger btn-sm" %></td>
          
        </tr>
      <% end %>
    </tbody>
  </table>

<%= link_to "New friend", new_friend_path, class: 'btn btn-secondary' %>
